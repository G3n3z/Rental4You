@model Rental4You.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Nova</h1>

<h4>Reserva</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataLevantamento" class="control-label"></label>
                <input asp-for="DataLevantamento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Veiculo.CustoDia" class="control-label"></label>
                <input asp-for="Veiculo.CustoDia" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CustoTotal" class="control-label"></label>
                <input asp-for="CustoTotal" disabled class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" asp-action="Create" class="btn btn-primary" >Reservar</button>
            </div>
            <div class="form-group">
                <button type="submit" asp-action="NovaReserva" class="btn btn-primary">Calcular</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning btn-sm">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
