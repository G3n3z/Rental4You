@model Rental4You.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Veiculo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Nome)
        </dd>
        <dt class = "col-sm-2">
            Estado da Reserva:
        </dt>
        <dd class = "col-sm-10">
            @Reserva.translate(Model.Estado)
        </dd>
        <dt class = "col-sm-2">
            Data de Levantamento:
        </dt>
        <dd class = "col-sm-10">
            @Model.DataLevantamento
        </dd>
        <dt class = "col-sm-2">
            Data de Entrega:
        </dt>
        <dd class = "col-sm-10">
            @Model.DataEntrega
        </dd>
        <dt class = "col-sm-2">
            Concluido
        </dt>
            <dd class = "col-sm-10">
           <input asp-for="Concluido" readonly="readonly" disabled/>
        </dd>

        
        @if (true) //Se for cliente e se o id for ele
        {
            <form asp-action="Create" asp-controller="Avaliacoes">
                <input type="hidden" name="ReservaId" value="@Model.ReservaId" />
                <input type="hidden" name="EmpresaId" value="@Model.Veiculo.EmpresaId" />
                
                @if(Model.Avaliacao == null)
                {
                    <dt class = "col-sm-2">
                        Nota
                    </dt>
                      
                    <input name="Nota" value="@Model?.Avaliacao?.Nota" />
                    <button type="submit" class="btn btn-primary">Submeter Avaliação</button>
                }
                else
                {
                    <dt class = "col-sm-2">
                        Nota
                    </dt>
                    <dd class="col-sm-10">@Model.Avaliacao.Nota</dd>  
                }

            </form>
        }
        else
        {
            @if(Model.Avaliacao != null) { 
                <div>
                    <label asp-for= "Avaliacao.Nota" ></label >
                    <input asp-for= "Avaliacao.Nota" readonly="readonly"/>
                </div >      }
            else
            {
                <div>Esta reserva não possui Avaliação</div>
            }
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn-sm btn-warning">Back to List</a>
</div>




