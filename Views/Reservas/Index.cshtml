@model IEnumerable<Rental4You.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservas</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo.Nome)
            </th>
            @if(!User.IsInRole("Cliente")){
                <th>
                    Utilizador
                </th>
            }
            <th>
                Avaliação    
            </th>
            <th>
                Data de Levantamento
            </th>
            <th>
                Data de Entrega
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concluido)
            </th>
            <th>Acções</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Nome)
            </td>
            @if(!User.IsInRole("Cliente")){
                <td>    
                    @item.ApplicationUser.PrimeiroNome
                </td>
            }
            @if(item.Avaliacao == null){
                <td>--</td>
                
            }else{
                <td>@item.Avaliacao.Nota/10</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.DataLevantamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concluido)
            </td>
            <td>
                <div class="row">
                    <div class="col-3">
                        <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-success">Details</a>
                    </div>
                    @if(item.Estado == StatusReserva.pending){
                        <div class="col-3">
                            <form asp-action="ChangeStatus" asp-route-id="@item.ReservaId" method="post">
                                <input type="hidden" name="newStatus" value="@StatusReserva.approved"/>
                                <button type="submit" class="btn btn-success">Aprovar</button>
                            </form>
                        </div>
                        <div class="col-3">
                            <form asp-action="ChangeStatus" asp-route-id="@item.ReservaId" method="post" >
                                <input type="hidden" name="newStatus" value="@StatusReserva.rejected"/>
                                <button type="submit" class="btn btn-danger">Rejeitar</button>
                            </form>
                        </div>
                    }
                    else if (item.Estado == StatusReserva.approved)
                    {   
                        <div class="col-3">
                            @if(item.Levantamento == null){
                                <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-warning">Levantamento</a>
                            }else if(item.Entrega == null){
                                <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-warning">Entrega</a>
                            }
                        </div>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
