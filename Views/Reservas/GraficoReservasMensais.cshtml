@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Reservas mensais nos últimos 12 meses</h1>
<div>
	<canvas id="chartGraficoReservasMensais"></canvas>
</div>
@section Scripts {
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script>
			$.ajax({
				type: "POST",
				url: "/Reservas/GetDadosReservasMensais",
				contentType: "application/json; charset=utf-8",
				dataType: "json",
				success: function (data) {
					let Labels = data[0];
					let Datasets1 = data[1];
					let dataT = {
						labels: Labels,
						datasets: [{
							label: "Meses",
							data: Datasets1,
							fill: false,
							borderWidth: 1,
							backgroundColor: ["red", "green", "blue", "cyan", "yellow"]
						}]
					};
					let ctx = $("#chartGraficoReservasMensais").get(0).getContext("2d");
					let myNewChart = new Chart(ctx, {
						type: 'bar',
						data: dataT,
						options: {
							responsive: true,
							title: { display: true, text: 'Reservas Mensais' },
							legend: { position: 'bottom' },
						}
					});
				}
			});
		</script>
 }