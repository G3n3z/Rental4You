@model IEnumerable<Rental4You.ViewModel.UserRolesViewModel>
@{
    ViewData["Title"] = "Role Manager Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Roles</h1>

<table class="table table-striped table-hover table-bordered mt-4">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Estado</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var viewModel in Model)
        {
            <tr>
                <td>@viewModel.PrimeiroNome</td>
                <td>@viewModel.UltimoNome</td>
                <td>@viewModel.UserName</td>
                <td>@String.Join(",", viewModel.Roles)</td>
                @if (viewModel.IsActive == true)
                {
                    <td class="">Active</td>
                }
                else
                {
                    <td>Inactive</td>
                }
                <td><a asp-controller="Users" asp-action="Edit" asp-route-userId="@viewModel.UserId" class="btn btn-info">Editar</a></td>
                <td><a asp-controller="Users" asp-action="Details" asp-route-userId="@viewModel.UserId" class="btn btn-info">Detalhes</a></td>

            </tr>
        }

    </tbody>
</table>
