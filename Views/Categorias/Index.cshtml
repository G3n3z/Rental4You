@model IEnumerable<Rental4You.Models.Categoria>

@{
	ViewData["Title"] = "Index";
}

<h1>Categorias</h1>
@if (User.IsInRole("Admin"))
{
	<p>
		<a asp-action="Create" class="btn btn-primary btn-sm">Criar Categoria</a>
	</p>
}

<table class="table sm" style="width: 400px;">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>Ações</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-success">Detalhes</a>
					@if (User.IsInRole("Admin"))
					{
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-warning">Editar</a>
						@if (item.Veiculos == null || item.Veiculos.Count() == 0)
						{
							<a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Remover</a>
						}
					}
				</td>
			</tr>
		}
	</tbody>
</table>
